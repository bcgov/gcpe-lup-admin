{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "admin-angular-on-nginx",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "completionDeadlineSeconds": 1800,
        "output": {
            "to": {
                "kind": "ImageStreamTag",
                "name": "${NAME}:latest"
            }
        },
        "source": {
            "dockerfile": "FROM admin-nginx-runtime:latest\nCOPY * /tmp/app/dist/\nCMD  /usr/libexec/s2i/run",
            "images": [
                {
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "admin-angular-builder:latest"
                    },
                    "paths": [
                        {
                            "destinationDir": "tmp",
                            "sourcePath": "/opt/app-root/src/dist/."
                        }
                    ]
                }
            ],
            "type": "Dockerfile"
        },
        "strategy": {
            "dockerStrategy": {
                "from": {
                    "kind": "ImageStreamTag",
                    "name": "admin-nginx-runtime:latest"
                }
            },
            "type": "Docker"
        },
        "resources": {
          "requests": {
            "cpu": "100m",
            "memory": "2Gi"
          },
          "limits": {
            "cpu": "1",
            "memory": "4Gi"
          }
        }
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "admin-angular-on-nginx"
    },
    {
      "name": "GIT_SOURCE_URL",
      "displayName": "GIT Source Repo URL",
      "description": "A GIT URL to your source code.",
      "required": true,
      "value": "https://github.com/bcgov/landuseplanning-admin"
    }
  ]
}
